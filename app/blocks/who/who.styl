.who
    text-align center
    padding-top 100px
    padding-bottom 10px
    border-bottom 1px solid #ebebeb
    margin-bottom: 68px
    @media (max-width 992px)
        border-bottom none
        margin-bottom 0
        padding-bottom 20px
        padding-top 30px
    &__subtitle
        color #5c6873
        font-family RobotoCondensed
        font-size 18px
        font-weight 300
        line-height 30px
        max-width 800px
        margin 0 auto 64px
        @media (max-width 992px)
            margin-bottom 30px
    &__content
        display flex
        @media (max-width 992px)
            flex-direction column
            align-items center
    &__skills
        flex 1
        flex-grow 1
        @media (max-width 992px)
            max-width 540px
            width 100%
    &__accordions
        flex 1
        flex-grow 1
        margin-right 30px
        @media (max-width 992px)
            max-width 540px
            margin-right 0
            margin-bottom 30px
