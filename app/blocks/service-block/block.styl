.item
    color #3f444a
    border-radius 10px
    border 1px solid #dbdbdb
    display inline-block
    padding-top 32px
    padding-bottom 140px
    max-width 332px
    position relative
    padding-left 26px
    padding-right 26px
    transition .3s
    @media (max-width 992px)
        padding-bottom 100px
        padding-top 22px
        max-width 300px
        margin-bottom 20px
        &:last-of-type
            margin-bottom 0
    &:hover
        color #fff
        background-color #3f444a
    &__logo
        vertical-align middle
        size 88px
        @media (max-width 992px)
            size 56px
    &__title
        font-family RobotoCondensed
        font-size 22px
        font-weight 700
        text-transform uppercase
        margin-top 62px
        margin-bottom 30px
        text-align left
        @media (max-width 992px)
            font-size 19px
            margin-top 30px
            margin-bottom 16px
    &__text
        font-family RobotoCondensed
        font-size 18px
        font-weight 300
        line-height 25px
        text-align left
        width 260px
        @media (max-width 992px)
            font-size 16px
    &__button
        position absolute
        left 50%
        transform translateX(-50%)
        bottom 42px
        @media (max-width 992px)
            bottom 26px
