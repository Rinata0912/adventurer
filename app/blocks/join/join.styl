.join
    background url(../images/join.jpg) no-repeat
    background-size cover
    text-align center
    padding-top 100px
    padding-bottom 100px
    @media (max-width 992px)
        padding-top 40px
        padding-bottom 40px
    & &__title
        color #fff
    &__text
        color white
        font-family RobotoCondensed
        font-size 18px
        font-weight 300
        line-height 30px
        max-width 702px
        margin 0 auto
        margin-bottom 32px
        @media (max-width 992px)
            margin-bottom 20px
    &__icon
        width 64px
        height 62px
        margin-bottom 30px
        @media (max-width 992px)
            width 46px
            height 44px
            margin-bottom 18px
