.works
	text-align center
	padding-top 52px
	padding-bottom 80px
	border-bottom 1px solid #ebebeb
	overflow hidden
	@media(max-width 992px)
		padding-top 30px
		padding-bottom 40px
	@media(max-width 759px)
		padding-bottom 10px
	&__text
		color #5c6873
		font-family RobotoCondensed
		font-size 18px
		font-weight 300
		line-height 32px
		max-width 692px
		margin 0 auto
		margin-bottom 70px
		@media(max-width 992px)
			font-size 17px
			line-height 28px
			margin-bottom 30px
	&__links
		margin-bottom 52px
		@media(max-width 992px)
			margin-bottom 30px
		@media(max-width 768px)
			margin-bottom 20px
	&__link
		font-family RobotoCondensed
		font-size 16px
		font-weight 700
		text-transform uppercase
		color #3f444a
		text-decoration none
		margin-right 36px
		display inline-block
		cursor pointer
		@media(max-width 768px)
			margin-bottom 10px
		&.active
			color #ec4848
		&:last-of-type
			margin-right 0
		&:hover
			color darken(#ec4848, 20%)
	&__list
		display flex
		flex-wrap wrap
		margin-right -30px
		justify-content center

.mix
	display none
