.works-item
	margin-bottom 30px
	margin-right 30px
	&:nth-last-of-type(-n+3)
		margin-bottom 0
		@media(max-width 759px)
			margin-bottom 30px
	&__img
		width 350px
		height 200px
		display inline-block
		margin-bottom 26px
		position relative
		@media(max-width 759px)
			margin-bottom 6px
		&:hover
			.works-item__overlay
				opacity 1
	&__overlay
		z-index 100
		position absolute
		background rgba(236,72,72, .78)
		top 0
		bottom 0
		right 0
		left 0
		opacity 0
		transition opacity .5s
		font-size 0
		display flex
		align-items center
		justify-content center
	&__circle
		width 32px
		height 32px
		border 3px solid #fff
		border-radius 50%
		display inline-block
		display flex
		align-items center
		justify-content center
		&:last-of-type
			position relative
			margin-left 16px
			&:after
				content ''
				position absolute
				height 2px
				width 16px
				background-color #fff
				left -19px
				top 50%
				transform translateY(-50%)
			&:before
				content ''
				width 6px
				height 6px
				border-radius 50%
				background-color #fff
				position absolute
				top 50%
				transform translateY(-50%)
				left -13.5px
	&__zoom
		height 11px
		width 12px
	&__link
		height 11px
		width 11px
	&__name
		color #5c6873
		font-family RobotoCondensed
		font-size 20px
		font-weight 300
		margin-bottom 6px
	&__text
		color #5c6873
		font-family RobotoCondensed
		font-size 12px
		font-weight 300
