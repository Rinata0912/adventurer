.footer
	text-align center
	background-color #151515
	padding-top 56px
	padding-bottom 68px
	@media (max-width 1200px)
		display none
	&__title
		color white
		font-family Roboto
		font-size 21px
		font-weight 400
		margin-bottom 30px
	&__container
		display flex
	&__adventurer
		padding-right 18px
		text-align left
		flex 1
		flex-grow 1
		&-title
			color #ec4848
			font-family PTSans
			font-size 40px
			font-weight 700
			font-variant small-caps
			margin-bottom 6px
		&-text
			color #ccc
			font-family OpenSans
			font-size 14px
			font-weight 400
			line-height 20px
			margin-left 16px
			margin-bottom 40px
		&-list
			margin-left 16px
		&-item
			width 45px
			height 45px
			background #fff url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAKCAYAAACNMs+9AAAAMElEQVQYV2NkIBIwQtX9Z2BggLGxasUriawDXSFOk8k2EWYbhskUm4hhMtVMhJsMAJOFBQpe8HRwAAAAAElFTkSuQmCC') repeat
			display inline-block
			color #444
			text-align center
			padding-top 16px
			margin-right 5px
			border 1px solid #e2e2e2
			box-shadow inset 0 0 7px rgba(0, 0, 0, 0.08)
			transition color .3s
			&:last-of-type
				margin-right 0
			&:hover
				color #ec4848
				cursor pointer
		&-icon
			width 15px
			height 14px
			display inline-block
	&__features
		padding-right 18px
		text-align left
		flex 1
		flex-grow 1
		&-item
			color #ccc
			font-family Roboto
			font-size 15px
			font-weight 400
			padding-left 32px
			position relative
			margin-bottom 26px
			&:after
				content ''
				position absolute
				background url(../images/check-mark.svg) no-repeat
				width 16px
				height 15px
				left 0
				top 0
		&-list
			margin-left 20px
	&__tags
		padding-right 18px
		font-size 0
		text-align left
		flex 1
		flex-grow 1

		&-list
			display flex
			flex-wrap wrap
			margin-left 16px
			margin-right -5px
	&__tag
		background-color #ec4848
		color white
		font-family Roboto
		font-size 14px
		font-weight 400
		text-transform uppercase
		display inline-block
		padding 8px 5px
		text-align center
		margin 0 5px 5px 0
		flex-grow 1
		flex-shrink 1
		&:last-of-type
			flex-grow 0
			padding 8px 6px
	&__posts
		text-align left
		flex 1
		flex-grow 1
		font-size 0
		&-list
			margin-left 14px
			margin-right -8px
	&__post
		margin 0 8px 8px 0
		display inline-block
